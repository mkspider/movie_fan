<!--ジャンル絞り込み結果-->
<%# @resultsにデータが入っていれば検索結果を表示する %>
<% if @results %>
  <h2><%= @keywords %> Search Result ( <%= @type %> )--></h2>
  <% @results.each do |result| %>
     <div class="col-lg-6">
       <% if @movie.image.attached? %>
          <%= image_tag @movie.image,size: "250x250" %>
        <% else %>
          <%= image_tag 'movie.png', size: "200x200" %>
        <% end %>
      </div>
    <p>
      <%= link_to result.filmname, users_movie_path(result) %><br>
      <small>
        <%= result.introduction %>
      </small>
    </p>
  <% end %>
<% end %>