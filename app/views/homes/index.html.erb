<!--ジャンル絞り込み結果-->
<%# @resultsにデータが入っていれば検索結果を表示する %>
<% if @results %>
  <h2><%= @keywords %> Search Result ( <%= @type %> )--></h2>
  <% @results.each do |result| %>
    <p>
      <%= result.filmname %><br>
      <small>
        <%= result.introduction %>
      </small>
    </p>
  <% end %>
<% end %>