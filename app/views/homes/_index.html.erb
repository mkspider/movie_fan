
<%= form_tag(homes_search_movie_path, method: :get) do %>
  <%= label_tag :keywords, '検索ワード' %>

  <%# 検索ワードを引く次ぐためにparams[:keywords] %>
  <%= text_field_tag :keywords, params[:keywords] %>

  <%# セレクトボックスの状態を引き継ぐためにoptions_for_selectのselectedオプションを使用 %>
  <%= select_tag('type', options_for_select([%w[AND AND], %w[OR OR]], { :selected => params[:type] })) %>

  <%= submit_tag '検索' %>
<% end %>

<%# @resultsにデータが入っていれば検索結果を表示する %>
<div class="col-md-10">
  <h2　class="border-bottom"><%= @keywords %>検索結果( <%= @type %> )</h2>
    <% if @results %>
      <% @results.each do |result| %>
        <div class = "col-6">
          <div class="row">
            <div class="col-lg-6">
              <p>
                 <%= link_to result.title, users_movie_path(result) %><br>
                <small>
                  <%= result.body %>
                </small>
              </p>
            </div>
          </div>  
        </div>    
      <% end %>
    <% end %>
  </div>