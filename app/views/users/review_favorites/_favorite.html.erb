<% if !user_signed_in? %>
  <i class="fa fa-heart like-btn"></i>
  <%= review.review_favorites.length %>
<% elsif current_user.favorited_by?(review.id) %>
  <%= link_to  users_movie_review_review_favorite_path(movie, review, review.review_favorites), class: "like-link", method: :delete, remote: true do %>
    <i class="fa fa-heart unlike-btn"></i>
  <% end %>
  <%= review.review_favorites.length %>
<% else %>
  <%= link_to users_movie_review_review_favorites_path(movie,review), class: "like-link", method: :post, remote: true do %>
    <i class="fa fa-heart like-btn"></i>
  <% end %>
  <%= review.review_favorites.length %>
<% end %>