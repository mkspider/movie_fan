<div class="container">
    <div class="row">
        <div class="col-md-2"style="margin-top: 50px; text-align: center;">
          
         <button type="button" class="btn btn-dark w-100 btn-lg">ジャンル検索</button>
        <% @genres.each do |genre| %>
          <div>
            <%= link_to genre.name, user_genre_path(genre.id),class: "btn btn-outline-dark w-100" %>
          </div>
        <% end %>
          
        </div>
           <div class="col-md-10" style="margin-top: 50px;">
              <h4 class="border-bottom">作品一覧<span style="font-size:20px;">(全<span style="font-size:25px;"><%= @movies_all %></span>件)</span></h4>
              <div class="d-flex flex-wrap">
              <% @movies.each do |movie| %>
               <div class ="item_container px-5 py-5" style = "width: 25%">
                <%= link_to user_movies_path(movie.id) do %>
                  <%= image_tag item.get_image, size: '150x150' %>
                <% end %>
              <% end %>
            </div>
            <div class="col-md-6 offset-md-3">
              <div class="pagination" style="justify-content: center; margin-top: 30px;">
                <!--ページネーション入れる-->
                <p><%= paginate @movies %></p>
              </div>
            </div> 
        </div>
    </div>
</div>
