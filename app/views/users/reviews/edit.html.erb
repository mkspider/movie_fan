<div class="container">
  <div class="col-md-8 offset-md-2">
  <div class="shadow p-3 mb-5 bg-white rounded">
    <div class="row">
      <div class="col-md-12" style="text-align: left;">
        <h2 class="p-3 mb-2 bg-dark text-white">情報編集</h2>
       <p id="notice"></p>
        <%= form_with model: @review, url:users_movie_review_path, method: :patch do |f| %>
        <form>
          <table class="table table-borderless">
          <tr><div class="form-group", style="text-align: left;",>
            <td><%= f.label :プロフィール画像, class: "mr-5" %></td>
                 <td><%= f.file_field :profile_image, accept: "image/*" %></td>
          </div>
          </tr>
           <tr><div class="form-group">
              <div class="col-sm-10">
              <p id="notice"></p>
                <td><%= f.label :タイトル, class: "mr-5" %></td>
                    <td><%= f.text_field :title %></td></tr>
                    <p id="notice"></p>
                  <tr><td><%= f.label :レビュー本文, class: "mr-5" %></td>
                <td><%= f.text_area :review %></td></tr>
              </div>
           </div>
        </table>
        <div class="form-group" style="text-align: center;">
                 <p id="notice"></p>
                  <%= f.submit ' 変更を保存 ' , class: "btn btn-outline-success" %>
        </div>
        </form>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>
