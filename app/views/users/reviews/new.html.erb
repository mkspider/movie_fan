<div class="container" style="margin-top: 50px;">
  <div class="col-md-8 offset-md-2">
    <div class="shadow p-3 mb-5 bg-white rounded">
      <div class="row">
        <div class="col-md-8 offset-1" style="margin-top: 30px;">
          <h2 class="p-3 mb-2 bg-dark text-white">レビュー新規登録</h2>
          <p id="notice"></p>
          <%= form_with model: @review, url:users_movie_reviews_path, method: :post do |f| %>
            <form>
          　<!--★評価機能-->
              <div class="form-group row" id="star">
                <%= f.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
                <%= f.hidden_field :rate, id: :review_star %>
              </div>
              <script>
                $('#star').raty({
                  size     : 20,
                  starOff:  '<%= asset_path('star-off.png') %>',
                  starOn : '<%= asset_path('star-on.png') %>',
                  scoreName: 'review[star]'
                });
              </script>

              <div class="form-group">
                <p id="notice"></p>
                <%= f.label :レビュータイトル %>
                  <%= f.text_field :title, placeholder: "作品名" %>
              </div>
              <div class="form-group">
                <p id="notice"></p>
                <%= f.label :レビュー内容 %>
                  <%= f.text_area :review, placeholder: "ここに説明文を記述します" %>
              </div>


              <div class="form-group" style="text-align: center;">
                <p id="notice"></p>
                <%= f.submit "新規登録", class: "btn btn-outline-success"  %>
              </div>
            </form>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>