<div class="container" style="margin-top: 50px;">
 <div class="shadow p-3 mb-5 bg-white rounded">
  <div class="row">
    <div class="col-md-4" style="text-align: left;">
　　　<table class="table">
      <h2 class="p-3 mb-2 bg-dark text-white">コメント詳細</h2>
    <tr>
      <% @users.each do |user| %>
       <% if user.profile_image.present? %>
        <%= image_tag user.profile_image,size:"100x100" %>
       <% end %>
      <% end %>
    </tr>
      </table>
    </div>
    
       <div class="col-md-4"style="margin-top: 150px;">
        <table class="table">
          <tr><td>ユーザーネーム</td><td><%= @comment.user.name %></td></tr>
          <tr><td>年齢</td><td><%= @comment.user.age %></td></tr>
          <tr><td>性別</td><td><%= @comment.user.gender %></td></tr>
        </table>
      </div>

    <tr>
     <div class="col-md-6">
      <table class="table">
       <tr><td>コメント:</td><td><%= @comment.comment %></td></tr>
      <% if @comment.user.id == current_user.id %>
        <td><button><%= link_to "削除",  users_movie_review_comment_path(movie_id: @movie, review_id: @review, comment_id: @comment), method: :delete, data: { confirm: '本当に消しますか？' } %></button></td>
      <% end %>
      </table>
     </div>
    </tr>
  </div>
 </div>
</div>
