          <h2 class="p-3 mb-2 bg-dark text-white">コメント新規登録</h2>
          <p id="notice"></p>
          <%= form_with model:@comment, url:users_movie_review_comments_path, method: :post do |f| %>
            <form>
              <div class="form-group">
                <p id="notice"></p>
                  <%= f.text_area :comment, placeholder: "返信欄" %>
              </div>
              <div class="form-group" style="text-align: center;">
                <p id="notice"></p>
                <%= f.submit "返信", class: "btn btn-outline-success"  %>
              </div>
            </form>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
