<div class="container" style="margin-top: 50px;">
  <div class="col-md-8 offset-md-2">
<div class="shadow p-3 mb-5 bg-white rounded">
  <div class="row">
  <div class="col-md">
    <%= form_with model: @genre, url: admins_genres_path, method: :post do |f| %>
    <table class="table">
      <thead>
        <h2 class="p-3 mb-2 bg-dark text-white">ジャンル一覧・追加</h2><br> </thead>
      <tbody>
        <label>ジャンル名</label>
          <td>
            <%= f.text_field :genre_name, placeholder: "ジャンル名" %>
              <%= f.submit '新規登録', class: "btn btn-outline-success" %>
          </td>
      </tbody>
    </table>
    <% end %>
  </div>
</div>

  <!--二段に切り替える-->
  <div class="row ">
    <div class="col-md-5">
      <table class="table">
        <thead>
          <tr class="active">
           <label>ジャンル名</label>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.genre_name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admins_genre_path(genre) ,class: "btn btn-outline-success" %>

              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>
  </div>
  </div>
