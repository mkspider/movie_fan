<div class="container" style="margin-top: 50px;">
  <div class="shadow p-3 mb-5 bg-white rounded">
  <div class="row">
    <div class="col-md-3" style="text-align: left;">
　　　<table class="table">
      <h2 class="p-3 mb-2 bg-dark text-white">作品詳細</h2>
    </div>
    <div class="col-md-8", style="margin-top: 50px;">
      <tr>
        <% if @movie.image.attached? %>
          <%= image_tag @movie.image,size: "250x250" %>
        <% else %>
          <%= image_tag 'movie.png', size: "200x200" %>
        <% end %>
      </tr>
     </table>
      </div>
    <div class="col-md-6 offset-1"style="margin-top: 150px;">
    <table class="table">
      <tbody>
      <td>作品名</td><td><%= @movie.filmname %></td>
      <tr><td>作品概要</td><td><%= @movie.introduction %></td></tr>
        <tr><td>ジャンル</td><td><%= @movie.genre.genre_name %></td></tr>
          <tr>
            <td><%= link_to '編集する', edit_admins_movie_path(@movie.id), class: "btn btn-outline-success" %></td>
            <td><%= link_to "削除する", admins_movie_path(@movie.id),method: :delete, "data-confirm" => "削除しますか?",  class: "btn btn-outline-success" %></td>
            <td><%= link_to "一覧に戻る", admins_movies_path, class: "btn btn-outline-success" %></td>
            <td><%= link_to "レビュー一覧を開く",admins_movie_reviews_path(@movie),class: "btn btn-outline-success" %></td>
          </tr>
      </tbody>
    </table>
    </div>
  </div>
  </div>
</div>