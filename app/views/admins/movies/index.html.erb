<div class="container" style="margin-top: 50px;">
  <div class="col-md-8 offset-md-2">
      <div class="shadow p-3 mb-5 bg-white rounded">
        <h2 class="p-3 mb-2 bg-dark text-white">作品一覧</h2>
        <h1 class="text-right">
          <%= link_to "＋新規追加", new_admins_movie_path, class: "btn btn-dark rounded-pill" %>
        </h1>
        <div><%= render "admins/movies/index",tag_list:@tag_list,movies:@movies %></div>
        <p id="notice"></p>
        <table class="table table-hover">
          <tr class="table-secondary">
            <th>作品ID</th>
            <th>作品名</th>
            <th>ジャンル</th>
          </tr>
          <% @movies.each do |movie| %>
            <tr class="table-borderless">
              <td>
                <%= movie.id %>
              </td>
              <td>
                <%= link_to movie.filmname, admins_movie_path(movie) %>
              </td>
              <td>
                <%= movie.genre.genre_name %>
              </td>
              <td> </td>
            </tr>
            <% end %>
        </table>
      </div>
      <ul class="pagination justify-content-center">
        <%= paginate @movies %>
      </ul>
  </div>
</div>